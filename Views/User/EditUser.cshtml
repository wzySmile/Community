@model ApplicationUser

@{ ViewBag.Title = "编辑用户"; }

<h2>@ViewBag.Title</h2>

<form method="post">

    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Id" readonly>
            <span class="invalid" asp-validation-for="Id"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
            <span class="invalid" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName" readonly>
            <span class="invalid" asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="PhoneNumber">
            <span class="invalid" asp-validation-for="PhoneNumber"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Address">
            <span class="invalid" asp-validation-for="Address"></span>
        </div>
    </div>
    
    <div class="invalid" asp-validation-summary="ModelOnly">
    </div>
    <button type="submit" class="btn btn-primary">保存</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>